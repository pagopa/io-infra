<policies>
    <inbound>
        <base />
        <choose>
            <when condition="@(!context.User.Groups.Select(g => g.Name).Contains("{{cgn-external-activation-group-name}}"))">
                <return-response>
                    <set-status code="403"
                        reason="Unauthorized, the subscription used doesn't have the required permission" />
                </return-response>
            </when>
        </choose>
        <set-backend-service base-url="{{io-cgn-card-func-url}}/api/v1/cgn" />
        <set-header name="x-functions-key" exists-action="override">
            <value>{{io-fn-cgn-card-key}}</value>
        </set-header>
    </inbound>
    <outbound>
        <base />
    </outbound>
</policies>